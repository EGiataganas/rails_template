<div id="flash" class="flash">
  <% flash.each do |type, message| %>
    <div class="alert alert-<%= msg_class(type) %> bg-light text-<%= msg_class(type) %> alert-dismissible show" role="alert">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            <%= message %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
