<%= link_to(url_for(locale: locale), class: 'nav-link dropdown-toggle arrow-none', "role":"button", "data-bs-toggle":"dropdown", "aria-expanded":"false") do %>
  <%= t(locale, locale: locale) %>
<% end %>

<ul class="dropdown-menu">
  <li>
    <%= link_to(url_for(locale: :el), class: 'dropdown-item', data: {turbo: false}) do %>
      <%= t('greek', locale: :el) %>
    <% end %>
  </li>
  <li><hr class="dropdown-divider"></li>
  <li>
    <%= link_to(url_for(locale: :en), class: 'dropdown-item', data: {turbo: false}) do %>
      <%= t('english', local: :en)%>
    <% end %>
  </li>
</ul>
